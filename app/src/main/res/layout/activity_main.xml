<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/activity_main_btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/activity_main_tv_title"
        android:layout_toLeftOf="@+id/activity_main_tv_title"
        android:text="login" />

    <Button
        android:id="@+id/activity_main_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/activity_main_tv_title"
        android:layout_toRightOf="@+id/activity_main_tv_title"
        android:text="Cancel" />

    <EditText
        android:id="@+id/activity_main_et_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_main_iv_strawberry"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="46dp"
        android:focusable="true"
        android:hint="Enter Name"
        android:textColorHighlight="#ff7eff15"
        android:textColorHint="#ffff25e6" />

    <EditText
        android:id="@+id/activity_main_et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_main_et_nama"
        android:layout_alignEnd="@+id/activity_main_et_nama"
        android:layout_alignRight="@+id/activity_main_et_nama"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#ffff299f" />

    <ImageView
        android:id="@+id/activity_main_iv_strawberry"
        android:layout_width="132dp"
        android:layout_height="132dp"
        android:layout_below="@+id/activity_main_tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/fruit" />

    <TextView
        android:id="@+id/activity_main_tv_attempts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_main_et_password"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="Attempts Left:"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/activity_main_tv_attempts_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/activity_main_tv_attempts"
        android:layout_alignBottom="@+id/activity_main_tv_attempts"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/activity_main_tv_title"
        android:layout_toRightOf="@id/activity_main_tv_title"
        android:text=""
        android:textSize="25dp" />

    <TextView
        android:id="@+id/activity_main_tv_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_main_tv_title"
        android:layout_centerHorizontal="true"
        android:text="Tutorials point"
        android:textColor="#ff7aff24"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/activity_main_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Login"
        android:textSize="35dp" />


</RelativeLayout>