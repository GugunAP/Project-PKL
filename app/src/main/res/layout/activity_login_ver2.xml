<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="LOGIN PAGE"
        android:textColor="#707070"
        android:textSize="24dp"
        font:layout_constraintBottom_toTopOf="@+id/imageView"
        font:layout_constraintEnd_toEndOf="parent"
        font:layout_constraintStart_toStartOf="parent"
        font:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="256dp"
        android:layout_height="165dp"
        android:layout_marginBottom="34dp"
        font:layout_constraintBottom_toTopOf="@+id/editText2"
        font:layout_constraintEnd_toEndOf="parent"
        font:layout_constraintStart_toStartOf="parent"
        font:layout_constraintTop_toBottomOf="@+id/textView2"
        font:srcCompat="@drawable/logoupnbaru" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="17dp"
        android:backgroundTint="#009688"
        android:ems="10"
        android:gravity="center"
        android:hint="Username"
        font:layout_constraintBottom_toTopOf="@+id/editText3"
        font:layout_constraintEnd_toEndOf="parent"
        font:layout_constraintStart_toStartOf="parent"
        font:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="37dp"
        android:backgroundTint="#009688"
        android:ems="10"
        android:gravity="center"
        android:hint="Password"
        android:inputType="textPassword"
        font:layout_constraintBottom_toTopOf="@+id/button2"
        font:layout_constraintEnd_toEndOf="parent"
        font:layout_constraintStart_toStartOf="parent"
        font:layout_constraintTop_toBottomOf="@+id/editText2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:backgroundTint="#009688"
        android:fontFamily="sans-serif"
        android:text="LOGIN"

        android:textColor="@android:color/white"
        font:layout_constraintBottom_toTopOf="@+id/imageView6"
        font:layout_constraintEnd_toEndOf="parent"
        font:layout_constraintStart_toStartOf="parent"
        font:layout_constraintTop_toBottomOf="@+id/editText3" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="124dp"
        font:layout_constraintBottom_toBottomOf="parent"
        font:layout_constraintEnd_toEndOf="parent"
        font:layout_constraintStart_toStartOf="parent"
        font:layout_constraintTop_toBottomOf="@+id/button2"
        font:srcCompat="@drawable/logoifbaru" />


</androidx.constraintlayout.widget.ConstraintLayout>